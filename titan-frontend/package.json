{
  "name": "titan-frontend",
  "version": "1.0.0",
  "description": "HTTP frontend for Titan VM SSH/VNC access - Microsoft 365 Copilot API Plugin",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=bundle/index.cjs --format=cjs --external:cpu-features",
    "start": "node dist/index.js",
    "start:bundle": "node bundle/index.cjs",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "microsoft-365",
    "copilot",
    "api-plugin",
    "ssh",
    "vnc",
    "titan"
  ],
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^8.0.0",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "fastify": "^5.2.0",
    "fastify-type-provider-zod": "^4.0.0",
    "ssh2": "^1.16.0",
    "zod": "^3.24.0",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/ssh2": "^1.15.0",
    "esbuild": "^0.27.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20"
  }
}
